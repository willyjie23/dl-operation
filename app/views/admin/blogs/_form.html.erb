<%= form_with model: [:admin, blog] do |form| %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Blog name" %>
  </div>

  <% if current_user.admin? %>
    <br>
    <div class="mb-3">
      <%= form.label :user_ids, 'Users', class: "form-label" %>
      <%= form.select :user_ids, user_collect, {}, multiple: true, class: "form-select" %>
    </div>
  <% end %>

  <br>

  <%= form.submit class: "btn btn-primary" %>
  <%= link_to 'Back', url_for(:back), class: "btn btn-danger" %>
<% end %>