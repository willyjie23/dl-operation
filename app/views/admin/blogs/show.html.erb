<div class="container">
  <%= link_to '新增文章', new_admin_blog_article_path(@blog), class: 'btn btn-primary' %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Article title</th>
        <th scope="col">私有文章</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each_with_index do |a, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= a.title %></td>
          <td><%= a.is_private? ? '是' : '否' %></td>
          <td>
            <%= link_to '編輯', edit_admin_blog_article_path(@blog, a) %>
            <%= link_to '刪除', admin_blog_article_path(@blog, a), method: :delete, data: {confirm: "Are you sure?"} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
